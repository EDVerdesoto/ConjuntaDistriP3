{
  "info": {
    "name": "Booking Service - GraphQL API",
    "description": "Colección completa de operaciones GraphQL para el booking-service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Queries",
      "item": [
        {
          "name": "Listar todas las reservas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query ListarTodasLasReservas {\n  bookings {\n    id\n    userId\n    fecha\n    servicio\n    estado\n    canceladaEn\n    fechaFormateada\n    createdAt\n    updatedAt\n  }\n}",
                "variables": ""
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Listar próximas 5 reservas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query ProximasReservas {\n  upcomingBookings {\n    id\n    servicio\n    fecha\n    fechaFormateada\n    estado\n  }\n}",
                "variables": ""
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Mutations",
      "item": [
        {
          "name": "Crear reserva",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CrearReserva($fecha: String!, $servicio: String!) {\n  createBooking(fecha: $fecha, servicio: $servicio) {\n    id\n    userId\n    fecha\n    servicio\n    estado\n    fechaFormateada\n    createdAt\n  }\n}",
                "variables": "{\n  \"fecha\": \"2026-04-20T14:30:00\",\n  \"servicio\": \"Hotel Ocean View - Suite Ejecutiva\"\n}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Cancelar reserva",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CancelarReserva($id: ID!) {\n  cancelBooking(id: $id) {\n    message\n    booking {\n      id\n      servicio\n      estado\n      canceladaEn\n      fechaFormateada\n    }\n  }\n}",
                "variables": "{\n  \"id\": \"REEMPLAZAR_CON_ID_REAL\"\n}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Eliminar reserva",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation EliminarReserva($id: ID!) {\n  deleteBooking(id: $id) {\n    message\n    booking {\n      id\n      servicio\n      estado\n    }\n  }\n}",
                "variables": "{\n  \"id\": \"REEMPLAZAR_CON_ID_REAL\"\n}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Business Rules",
      "item": [
        {
          "name": "1. Crear múltiples reservas para prueba",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CrearReservaTest($fecha: String!, $servicio: String!) {\n  createBooking(fecha: $fecha, servicio: $servicio) {\n    id\n    servicio\n    estado\n  }\n}",
                "variables": "{\n  \"fecha\": \"2026-05-15T10:00:00\",\n  \"servicio\": \"Hotel Test 1\"\n}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "2. Verificar conteo de canceladas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query VerificarCanceladas {\n  bookings {\n    id\n    servicio\n    estado\n    canceladaEn\n  }\n}",
                "variables": ""
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Máximo 5 reservas canceladas\", function () {",
                    "    const jsonData = pm.response.json();",
                    "    const canceladas = jsonData.data.bookings.filter(b => b.estado === 'cancelada');",
                    "    pm.expect(canceladas.length).to.be.at.most(5);",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Registrar usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Usuario Test\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/auth/register",
              "host": ["{{auth_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/auth/login",
              "host": ["{{auth_url}}"],
              "path": ["auth", "login"]
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "const jsonData = pm.response.json();",
                    "if (jsonData.token) {",
                    "    pm.environment.set(\"token\", jsonData.token);",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "auth_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    }
  ]
}
